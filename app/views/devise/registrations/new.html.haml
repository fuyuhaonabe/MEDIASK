.header
  = render "/layouts/header"
.breadcrumbs
  = render "/layouts/breadcrumbs"
.usersform
  .usersform__in
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = devise_error_messages!
      .usersform__in__nickname
        %h1
          ニックネーム
          %span 必須
        = f.text_field :nickname, class: 'input', placeholder: '例）薬局ちゃん'
      .usersform__in__email
        %h1
          メールアドレス
          %span 必須
        = f.text_field :email, class: 'input', placeholder: '例）yakkyoku@yakkyoku.com'
      .usersform__in__password
        %h1
          パスワード
          %span 必須
        = f.password_field :password, class: 'input', placeholder: '半角英数字7文字以上'
      .usersform__in__send
        = f.submit '患者情報登録へ', class: 'submit'


