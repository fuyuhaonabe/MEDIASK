.usersform
  .usersform__in
    %ul
      %li
        %h1
          ニックネーム
          %span 必須
        %input.usersform__in__nickname{:name => "nickname", :placeholder => "例）薬局ちゃん", :type => "text"}
      %li
        %h1
          メールアドレス
          %span 必須
        %input.usersform__in__email{:name => "email", :placeholder => "例）yakkyoku@yakkyoku.com", :type => "text"}
      %li
        %h1
          パスワード
          %span 必須
        %input.usersform__in__password{:name => "password", :placeholder => "半角英数字4~10文字", :type => "text"}
      %li
        %br/
        %button.usersform__in__send{:name => "submit", :placeholder => "送信", :type => "submit"}
          患者情報登録へ


